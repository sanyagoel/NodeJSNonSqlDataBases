<%- include('../includes/head.ejs') %>

    <link rel="stylesheet" href="/css/main.css">

</head>
<body>
    <%- include('../includes/nav.ejs') %>

    <form class="forms" action="/admin/edit-product/<%= productf.id %>" method="POST">
        <div class="form-group">
            <label for="usernames">Usernames:</label>
            <input type="text" id="usernames" name="usernames" value="<%= productf.title %>">
        </div>
        
        <div class="form-group">
            <label for="imageurl">Image URL:</label>
            <input type="text" id="imageURL" name="imageurl" value="<%= productf.imageurl %>">
        </div>
    
        <div class="form-group">
            <label for="price">Price:</label>
            <input type="number" id="price" name="price" value="<%= productf.price %>">
        </div>
        
        <div class="form-group">
            <label for="description">Description:</label>
            <textarea id="description" name="description"><%= productf.description %></textarea>
        </div>
        
        <button type="submit">SUBMIT YOUR EDITS</button>
        <input type="hidden" value="<%= productf.id %>" name="actualid"> 
    </form>
    
</body>
</html>
